generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  email            String @unique
  position         String
  smallDescription String
  description      String
  password         String
}

model Education {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  years          String
  specialization String
  description    String
}

model Project {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  imageUrl    String
  description String
  link        String
  tags        String
}
